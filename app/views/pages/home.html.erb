<header class="flex items-center justify-between px-4 py-2 bg-white border-b">
  <div class="flex items-center">
    <span class="text-orange-600 text-xl font-bold">🍴 NonFryer recipes</span>
  </div>
  <div class="flex items-center space-x-2">
    <% if logged_in? %>
      <%= render "shared/logout" %>
    <% else %>
      <%= render "shared/login" %>
    <% end %>
    <%= link_to "＋", new_recipe_path, class: "text-white bg-orange-600 rounded-full w-8 h-8 flex items-center justify-center" %>
  </div>
</header>

<body class="bg-white">
  <div class="flex items-center p-4 space-x-4">
    <%= render "shared/sidebar" %>
    <%= form_with url: '#', method: :get, local: true do |f| %>
      <%= f.text_field :search, placeholder: "レシピ検索", class: "flex-1 border border-gray-300 rounded px-10 py-1" %>
      <%= f.submit "検索", class: "bg-orange-600 text-white rounded px-4 py-1" %>
    <% end %>
  </div>
</body>
